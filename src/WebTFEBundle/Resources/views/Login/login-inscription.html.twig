{% extends "@WebTFE/Layout/base.html.twig" %}
{% block head %}
    {{ parent() }}
    <title>Gestion de stock</title>
    {% stylesheets '@WebTFEBundle/Resources/public/css/separator.css' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
    {% stylesheets '@WebTFEBundle/Resources/public/css/login-insrciption-adding.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}
{% block content %}

    <div class="container">
        <div class="row" style="text-align: center;">
            <div class="col-sm-3 col-md-offset-3 col-md-6"><h1>Gestion de stock</h1></div>
        </div>
        <div class="row">
            <div id="login" class="col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-heading">Login</div>
                    <div class="panel-body">
                        {% include "WebTFEBundle:Login:login-form.html.twig" %}
                    </div>
                </div>
            </div>
            <div id="separate-login-inscription" class="col-sm-2">
                <div class="or-spacer-vertical left">
                    <div class="mask"></div>
                </div>
            </div>
            <div id="inscription" class="col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-heading">Inscription</div>
                    <div class="panel-body">
                        {% include "WebTFEBundle:Login:inscription-form.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}